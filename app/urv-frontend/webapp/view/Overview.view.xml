<mvc:View xmlns:smarttable="sap.ui.comp.smarttable" xmlns="sap.m"  controllerName="urvfrontend.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core">


        <SearchField
        id="UserID"
        placeholder="Search by User ID"
        liveChange="onLiveChange"
        search="getUser"/>
        <Select id="select" >
            <items>
                <core:ListItem key="user" text="Search by UserID" icon="sap-icon://person-placeholder"/>
                <core:ListItem key="group" text="Search by group" icon="sap-icon://group"/>
                
            </items>
        </Select>

        <Select id="selectCIS" >
            <items>
                <core:ListItem key="dev" text="dev" />
                <core:ListItem key="prod" text="prod" />
            </items>
        </Select>



    <core:Fragment fragmentName="urvfrontend.view.fragments.UserTable" type="XML"/>
    <core:Fragment fragmentName="urvfrontend.view.fragments.UserDetails" type="XML"/>

    <core:Fragment fragmentName="urvfrontend.view.fragments.GroupTable" type="XML"/>
    <core:Fragment fragmentName="urvfrontend.view.fragments.GroupDetails" type="XML"/>


    <core:Fragment fragmentName="urvfrontend.view.fragments.RoleCollections" type="XML"/>
 
    
</mvc:View>